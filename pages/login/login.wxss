/* pages/login/login.wxss */
.login{
  width: 80%;
  margin: 50rpx auto;
  padding: 50rpx;
  background-color: rgba(255,255,255,0.1);
}

.login .frm input{
  border: 1px solid #ffc1c1;
  border-radius: 30rpx;
  box-shadow:2px 2px 5px #ccc;
  padding: 10rpx 0rpx;
}

.login view{
  margin-top: 30rpx;
  text-align: center;
}

navigator{
  background-color: #ffc1c1;
  color: #fff;
  border: 1px solid #ffc1c1;
  border-radius: 40rpx;
  box-shadow:2px 2px 5px #ccc;
  padding: 10rpx 0rpx;
  margin-top:30rpx; 
  font-weight: 900;
}

.background{
  width: 100%;
  height: 100%;
  position: absolute;
  z-index: -1;
  top: 0;
  left: 0;
}